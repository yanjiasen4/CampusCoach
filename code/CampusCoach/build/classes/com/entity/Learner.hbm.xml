<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping package="com.entity">    
    
    <class name="Learner" table="learner"> 
		<id name="learnerID" column="learnerID">
			<generator class="native"></generator>
		</id>
		<property name="username" column="username"></property>
		<property name="password" column="password"></property>
		<property name="isCoach" column="isCoach"></property>
		<property name="avatar" column="avatar"></property>
		<property name="phoneNumber" column="phoneNumber"></property>
		<property name="realName" column="realName"></property>
		<property name="score" column="score"></property>
		<property name="rank" column="rank"></property>
    </class>
    
</hibernate-mapping>